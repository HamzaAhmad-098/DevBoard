<% content_for :title, "Admin Dashboard" %>

<h1 class="text-3xl font-bold mb-6">Manage All</h1>
<div class="mb-6">
  <div class="flex justify-between items-center mb-2">
    <h2 class="text-xl font-bold">Users</h2>
    <%= link_to "Add New User", new_user_path, class: "bg-green-600 text-white px-3 py-1 rounded hover:bg-green-500" %>
  </div>

  <table class="w-full mb-6 bg-gray-800 rounded">
    <thead>
      <tr class="bg-gray-700">
        <th class="p-2 text-left">Name</th>
        <th class="p-2">Role</th>
        <th class="p-2">Email</th>
        <th class="p-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="p-2"><%= user.name %></td>
          <td class="p-2"><%= user.role %></td>
          <td class="p-2"><%= user.email %></td>
          <td class="p-2">
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_user_path(user), class: "bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-500" %>
              <%= button_to "Destroy", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white px-3 py-1 rounded hover:bg-red-500" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <div class="mt-4">
    <%= render "pagination", records: @users, param_name: :user_page %>
  </div>
<div>
  <div class="flex justify-between items-center mb-2">
    <h2 class="text-xl font-bold">Tickets</h2>
    <%= link_to "Add New Ticket", new_ticket_path, class: "bg-green-600 text-white px-3 py-1 rounded hover:bg-green-500" %>
  </div>

  <div class="space-y-4">
    <% @tickets.each do |ticket| %>
      <div class="bg-gray-800 p-4 rounded flex justify-between">
        <div>
          <h2 class="font-bold"><%= ticket.title %></h2>
          <p class="text-sm text-gray-400">Status: <%= ticket.status %></p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_ticket_path(ticket), class: "bg-yellow-600 px-3 py-1 rounded hover:bg-yellow-500" %>
          <%= link_to "Delete", ticket, method: :delete, class: "bg-red-600 px-3 py-1 rounded hover:bg-red-500", data: { confirm: "Are you sure?" } %>
          <%= link_to "View Comments", ticket_comments_path(ticket), class: "bg-blue-600 px-3 py-1 rounded hover:bg-blue-500 text-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <div class="mt-4">
    <%= render "pagination", records: @tickets, param_name: :ticket_page %>
  </div>