<% content_for :title, "QA Dashboard" %>

<h1 class="text-3xl font-bold mb-4">Tickets Assigned to Me</h1>

<div class="space-y-4">
  <% @tickets.each do |ticket| %>
    <div class="bg-gray-800 p-4 rounded flex justify-between">
      <div>
        <h2 class="font-bold"><%= ticket.title %></h2>
        <p class="text-sm text-gray-400">Status: <%= ticket.status %></p>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Update Status", edit_ticket_path(ticket), class: "bg-yellow-600 px-3 py-1 rounded hover:bg-yellow-500" %>
      </div>
    </div>
  <% end %>
</div>
