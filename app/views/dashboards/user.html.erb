<% content_for :title, "User Dashboard" %>
<h1 class="text-3xl font-bold mb-4">My Tickets</h1>
<%= link_to "Create New Ticket", new_ticket_path, class: "bg-blue-600 px-4 py-2 rounded hover:bg-blue-500" %>
<div class="mt-6 space-y-4">
  <% @tickets.each do |ticket| %>
    <div class="bg-gray-800 p-4 rounded shadow flex justify-between">
      <div>
        <h2 class="font-bold"><%= ticket.title %></h2>
        <p class="text-sm text-gray-400"><%= ticket.status %></p>
      </div>
      <div>
        <%= link_to "View", ticket, class: "bg-gray-600 px-3 py-1 rounded hover:bg-gray-500" %>
        <%= link_to "Add Comment", new_ticket_comment_path(ticket), class: "bg-blue-600 px-3 py-1 rounded hover:bg-blue-500 text-white" %>
      </div>
    </div>
  <% end %>
</div>
<div class="mt-4">
  <%= render "pagination", records: @tickets , param_name: :ticket_page %>
</div>
